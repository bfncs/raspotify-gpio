{
  "name": "mopidy-buttons",
  "private": true,
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:dev": "ts-node-dev src/index.ts",
    "lint": "tslint --project tsconfig.json",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,css,md,json,yml}'"
  },
  "dependencies": {
    "rpio": "^1.0.13"
  },
  "devDependencies": {
    "@types/rpio": "0.0.2",
    "prettier": "^1.16.4",
    "ts-node-dev": "^1.0.0-pre.32",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "tslint",
      "git add"
    ],
    "*.{json,yml,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
