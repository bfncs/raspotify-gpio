    "start": "node dist/index.js",
    "start:dev": "ts-node-dev src/index.ts",
    "lint": "tslint --project tsconfig.json",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,css,md,json,yml}'"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
