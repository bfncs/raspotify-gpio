    "express": "^4.16.4",
    "mopidy": "^1.0.1",
    "passport": "^0.4.0",
    "passport-spotify": "^1.0.1",
    "qs": "^6.7.0",
    "rpio": "^1.0.13"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.16.1",
    "@types/node": "^11.13.0",
    "@types/passport": "^1.0.0",
    "@types/qs": "^6.5.2",
    "@types/rpio": "0.0.2",
    "prettier": "^1.16.4",
    "ts-node-dev": "^1.0.0-pre.32",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
